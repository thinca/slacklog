g.update('unstable', unstable)\n\n      // ---- こんなふうに ----\n      const tsserverConfig = workspace.getConfiguration('tsserver')\n      await tsserverConfig.update('enable', false)\n      // ---- こんなふうに ----```","ts":"1613536917.199700","edited":{"user":"U7TMPGWJ0","ts":"1613537080.000000"},"team":"T03C4RC8V","reactions":[{"name":"+1","count":1,"users":["US5UW1UNB"]}],"replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"jtj6"}]},{"client_msg_id":"98bb6995-8ddd-44b3-b858-1397ad6f216d","type":"message","user":"U8R597E9H","text":"いじりやすかったですよ。","ts":"1613536696.198900","team":"T03C4RC8V","replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"L2CBw"}]},{"client_msg_id":"7f27afce-449f-4c83-b0de-fa0f83f2bee9","type":"message","user":"U8R597E9H","text":"PR 出しましょう！","ts":"1613536690.198700","team":"T03C4RC8V","replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"en1j0"}]},{"client_msg_id":"7102699d-3ebf-4025-8953-9e72eff0a2b1","type":"message","user":"U8996GYBF","text":"待ちかー、早く色々できるようになって欲しい","ts":"1613536644.198500","team":"T03C4RC8V","replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"mFm"}]},{"type":"message","user":"U01N8E9RBEZ","text":"\u003c@U01N8E9RBEZ\u003e has joined the channel","ts":"1613536608.198100","subtype":"channel_join","replace_original":false,"delete_original":false,"blocks":null},{"client_msg_id":"eeac58fe-d038-4d1c-b845-f62625fa6ffc","type":"message","user":"US5UW1UNB","text":"どうだろう、vim-jp でみかけたきがする","ts":"1613536493.197900","team":"T03C4RC8V","replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"myjIG"}]},{"client_msg_id":"18414fff-2236-4f02-9600-fb0e7b9c675f","type":"message","user":"U8996GYBF","text":"あ、そうなんだ","ts":"1613535944.197400","team":"T03C4RC8V","replace_original":false,"delete_original":false,"blocks":[{"type":"rich_text","block_id":"Pk1xz"}]},{"client_msg_i