import { createSlice, PayloadAction } from "@reduxjs/toolkit"

export type State = {
  count: number
}

const initialState: State = {
  count: 0,
}

export const counterModule = createSlice({
  name: "COUNTER",
  initialState,
  reducers: {
    increment: (state) => {
      state.count += 1
    },
    decrement: (state) => {
      state.count -= 1
    },
    add: (state, { payload }: PayloadAction<{ num: number }>) => {
      state.count = payload.num
    },
  },
})

// dispatch(counterModule.actions.increment())