const Foo = () => {
  const values = {
    0: 'foo',
    1: 'bar',
  };
  const [index, setIndex] = useState(0);
  const [value, setValue] = useState(values[0]);

  useEffect(() => {
    setValue(values[index])
  }, [index])

  const handleChange = (e: any, i: number) => {
    setIndex(i);
  };

  return (
    <>
      <Tabs onChange={handleChange}>
        <Tab />
        <Tab />
      </Tabs>
      {value}
    </>
  );
};